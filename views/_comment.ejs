<li id="comment-<%= comment._id %>">
    <p>
        <% if(locals.user && locals.user.id == comment.user.id){ %>
            <small><a class="delete-comment-button" href="/comments/destroy/<%= comment.id %>"><i class="fa-solid fa-trash-can"></i></a></small>    
        <% } %>
        <%= comment.content %>
        <br>
        <small><%= comment.user.name %></small>
    </p>
</li>